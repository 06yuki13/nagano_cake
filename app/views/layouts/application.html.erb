      </li>

      <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
        ログアウト
        <% end %>
      </li>

      <% else %>
        <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
