<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
         <ul class="navbar-nav ml-auto">

      <% if admin_signed_in? %>
      <li class="nav-item">
        <%= link_to "商品一覧",admin_items_path,class: "nav-link" %>
       </li>

        <li class="nav-item">
        <%= link_to "会員一覧",class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "注文履歴一覧",class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "ジャンル一覧",admin_genres_path, class: "text-light nav-link" do %>
        ジャンル一覧
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to "ログアウト",class: "nav-link" %>
     </li>

     <% elsif customer_signed_in? %>
      <li class="nav-item">
        <%= link_to "マイページ",class: "nav-link" %>
       </li>

        <li class="nav-item">
        <%= link_to "商品一覧",class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "カート",class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
      </li>

      <% else %>
        <li class="nav-item">
        <%= link_to "About",public_homes_about_path,class: "nav-link" %>
       </li>

        <li class="nav-item">
        <%= link_to "商品一覧",admin_items_path,class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "新規登録",new_customer_registration_path,class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "ログイン",new_customer_session_path,class: "nav-link" %>
      </li>
      <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
