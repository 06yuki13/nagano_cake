<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
         <ul class="navbar-nav ml-auto">

      <% if admin_signed_in? %>
      <li class="nav-item">
        <%= link_to "admin_items_path",class: "text-light nav-link" do %>
        商品一覧
        <% end %>
       </li>

        <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
        会員一覧
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
        注文履歴一覧
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to "admin_genres_path",class: "text-light nav-link" do %>
        ジャンル一覧
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
        ログアウト
        <% end %>
     </li>

     <% elsif customer_signed_in? %>
      <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
        マイページ
        <% end %>
       </li>

        <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
        商品一覧
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to "#",class: "text-light nav-link" do %>
